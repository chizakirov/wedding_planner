@model Wedding

<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <meta http-equiv="X-UA-Compatible" content="ie=edge">
  <title>Document</title>
</head>
<body>
  <h1>Hello, @TempData["name"]! Plan your wedding</h1>
  <a href = "/logout">Logout</a>
  <hr>
  <form asp-action="CreateWedding" asp-controller="Home" method="post">
    <span class="text-danger" asp-validation-for="WedderOne"></span>
    <label asp-for="WedderOne">Wedder One</label>
    <input asp-for="WedderOne">
    <br>
    <br>
    <span class="text-danger" asp-validation-for="WedderTwo"></span>
    <label asp-for="WedderTwo">Wedder Two</label>
    <input asp-for="WedderTwo">
    <br>
    <br>
    <span class="text-danger" asp-validation-for="Date"></span>
    <label asp-for="Date">Date</label>
    <input type="date" asp-for="Date">
    <br>
    <br>
    <span class="text-danger" asp-validation-for="Address"></span>
    <label asp-for="Address">Address</label>
    <input asp-for="Address">
    <br>
    <br>
    <input type="submit" value="Create">
  </form>
</body>
</html>